public class Repeater{
    public String fenceW(int posts){
        if (posts <= 0){
	    return "";
	}
	else {
	    String fence;
	    fence+="|";
	    posts -= 0;
	    while(posts > 0){
		fence+="--|";
		posts-=1;
	    }
	    return fence;
	}
	public static void main(String[] args){
	    System.out.println(fenceW(1));
	    System.out.println(fenceW(2));
	}
}
